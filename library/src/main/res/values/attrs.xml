<resources>
    <declare-styleable name="FancyTrendView">
        <attr name="flipSpeed" format="integer" />
        <attr name="flipDirection" format="enum">
            <enum name="random" value="0" />
            <enum name="up" value="1" />
            <enum name="down" value="2" />
            <enum name="left" value="3" />
            <enum name="right" value="4" />
        </attr>
        <attr name="textChangeType" format="enum">
            <enum name="random" value="0" />
            <enum name="increase" value="1" />
            <enum name="decrease" value="2" />
        </attr>
        <attr name="typedSpeed" format="integer" />
        <attr name="cursorBlinkInterval" format="integer" />
        <attr name="cursorWidth" format="dimension" />
        <attr name="cursorBlinkTimesAfterTypeDone" format="integer" />
        <attr name="textSize" format="dimension" />

        <attr name="textArray" format="reference" />
        <attr name="colorArray" format="reference" />
    </declare-styleable>
</resources>